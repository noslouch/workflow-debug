{
  "name": "@dj-rendering/monorepo",
  "description": "The Dow Jones components monorepo",
  "author": "DJ Engineering <DJEngineering@dowjones.com>",
  "private": true,
  "version": "0.0.0",
  "engines": {
    "node": "^14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:newscorp-ghfb/dj-rendering.git"
  },
  "scripts": {
    "deploy-storybook": "storybook-to-ghpages",
    "prepare": "lerna run --stream --sort prepare",
    "rebuild": "lerna exec --stream --sort -- npm rebuild"
  },
  "devDependencies": {
    "@newscorp-ghfb/eslint-config-wsj": "^0.1.4",
    "@storybook/storybook-deployer": "^2.8.10",
    "eslint": "^7.24.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1"
  },
  "workspaces": [
    "packages/**"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream pre-commit --since HEAD --exclude-dependents"
    }
  }
}
